import java.util.*;
class pattern2
{
    public static void main()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter no. of rows");
        int n=sc.nextInt();;
        for(int i=1;i<=n;i++)
        {
            for(int j=n;j>=i;j--)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }}
        
